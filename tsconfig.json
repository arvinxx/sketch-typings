{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./typings"],
    "experimentalDecorators": true,
    "newLine": "lf",
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
